/* 赞助商介绍 */

.sponsor {
  margin-top: 20rpx;
  background: #fff;
  padding: 26rpx 0 24rpx 0;
  border-radius: 20rpx;
}

.spon {
  display: flex;
}

.spon image {
  margin-top: 4rpx;
  margin-right: 10rpx;
  width: 8rpx;
  height: 32rpx;
}

.spon text {
  font-size: 28rpx;
  font-family: PingFangSC-Semibold;
  font-weight: 600;
  color: #be8c54;
}

.introduce {
  padding: 6rpx 20rpx;
}

.intText {
  padding-right: 10rpx;
  /* line-height: 30rpx; */
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
}

.intTexts {
  line-height: 30rpx;
}

.introd {
  display: flex;
  justify-content: space-between;
  padding: 0 34rpx 0 24rpx;
  margin-top: 20rpx;
  height: 80rpx;
  line-height: 74rpx;
  border-radius: 50rpx;
  background: linear-gradient(172deg, rgba(252, 249, 209, 1) 0%, rgba(239, 212, 157, 1) 100%);
}

.introd image {
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
  animation: turn 2.6s infinite ease;
}

@keyframes turn {
  0% {
    transform: rotateY(0);
  }

  100% {
    transform: rotateY(360deg);
  }
}

.introd text {
  font-size: 28rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: #be8c54;
}

