/* 
 * banner
 */

.banner{
  position: fixed;
  bottom: 0;
  right: calc(50% - 375rpx);
  z-index: 999;
}
.close image{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.banner navigator image{  
  display: block;
  width: 750rpx;
  height: 200rpx;
}
.adText{
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #fff;
  background-color: rgba(0,0,0,0.4);
  font-size: 18rpx;
  text-align: center;
  position: absolute;
  bottom: 0;
  right: 0;
}